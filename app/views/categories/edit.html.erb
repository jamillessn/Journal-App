<div class="flex-col">
    <h2 class="m-4 font-bold tracking-tight text-5xl text-gray-900 mb-6">Edit Category</h2>
    <%= render "form", category: @category %>
</div>
    <ul class="gap-3 text-center">
        <li>
            <%= link_to "Show this category", @category, class: "font-bold text-gray-600 italic text-sm" %>
        </li>
        <li>
            <%= link_to "Back to category list", categories_path, class: "font-bold text-gray-600 italic text-sm" %>
        </li>
        <li>
            <%= button_to @category, method: :delete, data: {turbo_confirm: "Are you sure you want to delete this category?"}, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-2 rounded transition duration-300" do %>
                <%= inline_svg "svg/trash.svg", class: "h-4 w-4 inline" %>
            <% end %>
        </li>
    </ul>

