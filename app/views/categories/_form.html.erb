
<%= form_with model: @category do |form| %>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"> 
  <div>
      <p>
        <%= form.label :user_id %> <br>
        <%= form.text_field :user_id, class: "w-full" %>
      </p>
    </div>

    <div>
      <p>
        <%= form.label :title %> <br>
        <%= form.text_field :title, class: "w-full" %>
      </p>
    </div>

    <div>
      <p>
        <%= form.label :desc %> <br>
        <%= form.text_area :desc, class: "w-full" %>
      </p>
    </div>

    <%= form.button 'Submit', class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded inline-flex items-center" %>



  </div>
  </div>

    
<% end %>
