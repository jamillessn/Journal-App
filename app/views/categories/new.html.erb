<section class="pt-6">

<h2 class="m-0 font-bold tracking-tight text-5xl text-gray-900 mb-4">Add a New Category</h2>
<div class='mx-auto prose flex-col'>
<%= render "form", category: @category %>

</div>

<div class="flex space-x-4 justify-center pt-5 gap-2">
    <%= link_to categories_path, class: "font-bold text-gray-600 italic" do %>
        <%= inline_svg "svg/back-arrow.svg", class: "h-4 w-4 inline" %>
        <span>Back to Categories list</span>
    <% end %> 
</div>

</section>




     
