<section class="flex justify-center items-center pt-8">

  <div class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow mx-auto">

    <div class="flex gap-2">
       <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900"><%= @category.title%></h5>
    
          <%= link_to edit_category_path(@category) do %>
              <%= inline_svg "svg/edit.svg", class: "h-6 w-6 inline hover:text-indigo-600 transition duration-300" %>
          <% end %>

    </div>
   
    <p class="font-bold text-midnight italic text-sm">Description</p>
    <p class=" mb-5 font-normal"><%= @category.desc%></p>

    <div class="flex justify-center">
       
    <%= link_to categories_path do %>
      <%= inline_svg "svg/back-arrow.svg", class: "h-4 w-4 inline hover:text-indigo-600 transition duration-300" %>
    <% end %>

    <%= button_to @category, method: :delete, data: {turbo_confirm: "Are you sure you want to delete this category?"}, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-2 rounded transition duration-300" do %>
      <%= inline_svg "svg/trash.svg", class: "h-4 w-4 inline" %>
    <% end %>

    <%= link_to "Add a new task", new_category_task_path(@category), class:"inline-flex items-center px-3 py-2 text-sm font-medium text-center bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"  %>
    </div>
  </div>

</section>
