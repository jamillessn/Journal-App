<div class="md:mx-auto md:w-full md:max-w-sm">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign up</h2>
    <form class="bg-white rounded px-8 pt-6 pb-8 mb-4">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4">
    <%= f.label :email , class:"text-sm text-gray-900 dark:text-gray" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "flex items-center border-b py-2" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password , class:"text-sm text-gray-900 dark:text-gray"%>
    <% if @minimum_password_length %>
    <em class="text-sm text-gray-900 dark:text-gray">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "flex items-center border-b py-2" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password_confirmation, class:"text-sm text-gray-900 dark:text-gray" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "flex items-center border-b py-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"mb-4 flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>

<% end %>

<%- if controller_name != 'sessions' %>
    
      <%= link_to "Back to Log in", new_session_path(resource_name) , class:"text-sm text-gray-900 dark:text-gray font-semibold" %><br />
    <% end %>

   </form>
    

  </div>
</div>


         

  
