<section class="pt-6">
<div class="prose">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"> 
        <%= form_with(model: [@category, @task]) do |f| %>
        <div>
          <h2 class="m-0 font-bold tracking-tight text-5xl text-gray-900">Edit Task</h1>
        </div>
        <div class="mt-6">
            <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
        <div class="mt-6">
            <%= f.label :desc, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :desc, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
        <div class="flex justify-end pt-5 gap-2">
            <%= button_to "<", tasks_path, class: "bg-gray-500 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded inline-flex items-center" %>
            <%= button_to "Delete this task", @task.category, method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "bg-red-500 hover:bg-red-800 text-white font-bold py-2 px-4 rounded inline-flex items-center" %>
            
            <%= f.submit class: "bg-indigo-500 hover:bg-indigo-800 text-white font-bold py-2 px-4 rounded inline-flex items-center" %>
        </div>
        <% end %>
    
    </div>
</div>
</section>